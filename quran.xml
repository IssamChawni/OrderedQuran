<quran>
	<sura index="1" name="الفاتحة">
		<aya index="1" text="بِسْمِ ٱللَّهِ ٱلرَّحْمَٰنِ ٱلرَّحِيمِ" />
		<aya index="2" text="ٱلْحَمْدُ لِلَّهِ رَبِّ ٱلْعَٰلَمِينَ" />
		<aya index="3" text="ٱلرَّحْمَٰنِ ٱلرَّحِيمِ" />
		<aya index="4" text="مَٰلِكِ يَوْمِ ٱلدِّينِ" />
		<aya index="5" text="إِيَّاكَ نَعْبُدُ وَإِيَّاكَ نَسْتَعِينُ" />
		<aya index="6" text="ٱهْدِنَا ٱلصِّرَٰطَ ٱلْمُسْتَقِيمَ" />
		<aya index="7" text="صِرَٰطَ ٱلَّذِينَ أَنْعَمْتَ عَلَيْهِمْ غَيْرِ ٱلْمَغْضُوبِ عَلَيْهِمْ وَلَا ٱلضَّآلِّينَ" />
	</sura>
	<sura index="87" name="الأعلى">
		<aya index="1" text="سَبِّحِ ٱسْمَ رَبِّكَ ٱلْأَعْلَى" bismillah="بِسْمِ ٱللَّهِ ٱلرَّحْمَٰنِ ٱلرَّحِيمِ" />
		<aya index="2" text="ٱلَّذِى خَلَقَ فَسَوَّىٰ" />
		<aya index="3" text="وَٱلَّذِى قَدَّرَ فَهَدَىٰ" />
		<aya index="4" text="وَٱلَّذِىٓ أَخْرَجَ ٱلْمَرْعَىٰ" />
		<aya index="5" text="فَجَعَلَهُۥ غُثَآءً أَحْوَىٰ" />
		<aya index="6" text="سَنُقْرِئُكَ فَلَا تَنسَىٰٓ" />
		<aya index="7" text="إِلَّا مَا شَآءَ ٱللَّهُ ۚ إِنَّهُۥ يَعْلَمُ ٱلْجَهْرَ وَمَا يَخْفَىٰ" />
		<aya index="8" text="وَنُيَسِّرُكَ لِلْيُسْرَىٰ" />
		<aya index="9" text="فَذَكِّرْ إِن نَّفَعَتِ ٱلذِّكْرَىٰ" />
		<aya index="10" text="سَيَذَّكَّرُ مَن يَخْشَىٰ" />
		<aya index="11" text="وَيَتَجَنَّبُهَا ٱلْأَشْقَى" />
		<aya index="12" text="ٱلَّذِى يَصْلَى ٱلنَّارَ ٱلْكُبْرَىٰ" />
		<aya index="13" text="ثُمَّ لَا يَمُوتُ فِيهَا وَلَا يَحْيَىٰ" />
		<aya index="14" text="قَدْ أَفْلَحَ مَن تَزَكَّىٰ" />
		<aya index="15" text="وَذَكَرَ ٱسْمَ رَبِّهِۦ فَصَلَّىٰ" />
		<aya index="16" text="بَلْ تُؤْثِرُونَ ٱلْحَيَوٰةَ ٱلدُّنْيَا" />
		<aya index="17" text="وَٱلْءَاخِرَةُ خَيْرٌۭ وَأَبْقَىٰٓ" />
		<aya index="18" text="إِنَّ هَٰذَا لَفِى ٱلصُّحُفِ ٱلْأُولَىٰ" />
		<aya index="19" text="صُحُفِ إِبْرَٰهِيمَ وَمُوسَىٰ" />
	</sura>
	<sura index="88" name="الغاشية">
		<aya index="1" text="هَلْ أَتَىٰكَ حَدِيثُ ٱلْغَٰشِيَةِ" bismillah="بِسْمِ ٱللَّهِ ٱلرَّحْمَٰنِ ٱلرَّحِيمِ" />
		<aya index="2" text="وُجُوهٌۭ يَوْمَئِذٍ خَٰشِعَةٌ" />
		<aya index="3" text="عَامِلَةٌۭ نَّاصِبَةٌۭ" />
		<aya index="4" text="تَصْلَىٰ نَارًا حَامِيَةًۭ" />
		<aya index="5" text="تُسْقَىٰ مِنْ عَيْنٍ ءَانِيَةٍۢ" />
		<aya index="6" text="لَّيْسَ لَهُمْ طَعَامٌ إِلَّا مِن ضَرِيعٍۢ" />
		<aya index="7" text="لَّا يُسْمِنُ وَلَا يُغْنِى مِن جُوعٍۢ" />
		<aya index="8" text="وُجُوهٌۭ يَوْمَئِذٍۢ نَّاعِمَةٌۭ" />
		<aya index="9" text="لِّسَعْيِهَا رَاضِيَةٌۭ" />
		<aya index="10" text="فِى جَنَّةٍ عَالِيَةٍۢ" />
		<aya index="11" text="لَّا تَسْمَعُ فِيهَا لَٰغِيَةًۭ" />
		<aya index="12" text="فِيهَا عَيْنٌۭ جَارِيَةٌۭ" />
		<aya index="13" text="فِيهَا سُرُرٌۭ مَّرْفُوعَةٌۭ" />
		<aya index="14" text="وَأَكْوَابٌۭ مَّوْضُوعَةٌۭ" />
		<aya index="15" text="وَنَمَارِقُ مَصْفُوفَةٌۭ" />
		<aya index="16" text="وَزَرَابِىُّ مَبْثُوثَةٌ" />
		<aya index="17" text="أَفَلَا يَنظُرُونَ إِلَى ٱلْإِبِلِ كَيْفَ خُلِقَتْ" />
		<aya index="18" text="وَإِلَى ٱلسَّمَآءِ كَيْفَ رُفِعَتْ" />
		<aya index="19" text="وَإِلَى ٱلْجِبَالِ كَيْفَ نُصِبَتْ" />
		<aya index="20" text="وَإِلَى ٱلْأَرْضِ كَيْفَ سُطِحَتْ" />
		<aya index="21" text="فَذَكِّرْ إِنَّمَآ أَنتَ مُذَكِّرٌۭ" />
		<aya index="22" text="لَّسْتَ عَلَيْهِم بِمُصَيْطِرٍ" />
		<aya index="23" text="إِلَّا مَن تَوَلَّىٰ وَكَفَرَ" />
		<aya index="24" text="فَيُعَذِّبُهُ ٱللَّهُ ٱلْعَذَابَ ٱلْأَكْبَرَ" />
		<aya index="25" text="إِنَّ إِلَيْنَآ إِيَابَهُمْ" />
		<aya index="26" text="ثُمَّ إِنَّ عَلَيْنَا حِسَابَهُم" />
	</sura>
	<sura index="89" name="الفجر">
		<aya index="1" text="وَٱلْفَجْرِ" bismillah="بِسْمِ ٱللَّهِ ٱلرَّحْمَٰنِ ٱلرَّحِيمِ" />
		<aya index="2" text="وَلَيَالٍ عَشْرٍۢ" />
		<aya index="3" text="وَٱلشَّفْعِ وَٱلْوَتْرِ" />
		<aya index="4" text="وَٱلَّيْلِ إِذَا يَسْرِ" />
		<aya index="5" text="هَلْ فِى ذَٰلِكَ قَسَمٌۭ لِّذِى حِجْرٍ" />
		<aya index="6" text="أَلَمْ تَرَ كَيْفَ فَعَلَ رَبُّكَ بِعَادٍ" />
		<aya index="7" text="إِرَمَ ذَاتِ ٱلْعِمَادِ" />
		<aya index="8" text="ٱلَّتِى لَمْ يُخْلَقْ مِثْلُهَا فِى ٱلْبِلَٰدِ" />
		<aya index="9" text="وَثَمُودَ ٱلَّذِينَ جَابُوا۟ ٱلصَّخْرَ بِٱلْوَادِ" />
		<aya index="10" text="وَفِرْعَوْنَ ذِى ٱلْأَوْتَادِ" />
		<aya index="11" text="ٱلَّذِينَ طَغَوْا۟ فِى ٱلْبِلَٰدِ" />
		<aya index="12" text="فَأَكْثَرُوا۟ فِيهَا ٱلْفَسَادَ" />
		<aya index="13" text="فَصَبَّ عَلَيْهِمْ رَبُّكَ سَوْطَ عَذَابٍ" />
		<aya index="14" text="إِنَّ رَبَّكَ لَبِٱلْمِرْصَادِ" />
		<aya index="15" text="فَأَمَّا ٱلْإِنسَٰنُ إِذَا مَا ٱبْتَلَىٰهُ رَبُّهُۥ فَأَكْرَمَهُۥ وَنَعَّمَهُۥ فَيَقُولُ رَبِّىٓ أَكْرَمَنِ" />
		<aya index="16" text="وَأَمَّآ إِذَا مَا ٱبْتَلَىٰهُ فَقَدَرَ عَلَيْهِ رِزْقَهُۥ فَيَقُولُ رَبِّىٓ أَهَٰنَنِ" />
		<aya index="17" text="كَلَّا ۖ بَل لَّا تُكْرِمُونَ ٱلْيَتِيمَ" />
		<aya index="18" text="وَلَا تَحَٰٓضُّونَ عَلَىٰ طَعَامِ ٱلْمِسْكِينِ" />
		<aya index="19" text="وَتَأْكُلُونَ ٱلتُّرَاثَ أَكْلًۭا لَّمًّۭا" />
		<aya index="20" text="وَتُحِبُّونَ ٱلْمَالَ حُبًّۭا جَمًّۭا" />
		<aya index="21" text="كَلَّآ إِذَا دُكَّتِ ٱلْأَرْضُ دَكًّۭا دَكًّۭا" />
		<aya index="22" text="وَجَآءَ رَبُّكَ وَٱلْمَلَكُ صَفًّۭا صَفًّۭا" />
		<aya index="23" text="وَجِا۟ىٓءَ يَوْمَئِذٍۭ بِجَهَنَّمَ ۚ يَوْمَئِذٍۢ يَتَذَكَّرُ ٱلْإِنسَٰنُ وَأَنَّىٰ لَهُ ٱلذِّكْرَىٰ" />
		<aya index="24" text="يَقُولُ يَٰلَيْتَنِى قَدَّمْتُ لِحَيَاتِى" />
		<aya index="25" text="فَيَوْمَئِذٍۢ لَّا يُعَذِّبُ عَذَابَهُۥٓ أَحَدٌۭ" />
		<aya index="26" text="وَلَا يُوثِقُ وَثَاقَهُۥٓ أَحَدٌۭ" />
		<aya index="27" text="يَٰٓأَيَّتُهَا ٱلنَّفْسُ ٱلْمُطْمَئِنَّةُ" />
		<aya index="28" text="ٱرْجِعِىٓ إِلَىٰ رَبِّكِ رَاضِيَةًۭ مَّرْضِيَّةًۭ" />
		<aya index="29" text="فَٱدْخُلِى فِى عِبَٰدِى" />
		<aya index="30" text="وَٱدْخُلِى جَنَّتِى" />
	</sura>
	<sura index="90" name="البلد">
		<aya index="1" text="لَآ أُقْسِمُ بِهَٰذَا ٱلْبَلَدِ" bismillah="بِسْمِ ٱللَّهِ ٱلرَّحْمَٰنِ ٱلرَّحِيمِ" />
		<aya index="2" text="وَأَنتَ حِلٌّۢ بِهَٰذَا ٱلْبَلَدِ" />
		<aya index="3" text="وَوَالِدٍۢ وَمَا وَلَدَ" />
		<aya index="4" text="لَقَدْ خَلَقْنَا ٱلْإِنسَٰنَ فِى كَبَدٍ" />
		<aya index="5" text="أَيَحْسَبُ أَن لَّن يَقْدِرَ عَلَيْهِ أَحَدٌۭ" />
		<aya index="6" text="يَقُولُ أَهْلَكْتُ مَالًۭا لُّبَدًا" />
		<aya index="7" text="أَيَحْسَبُ أَن لَّمْ يَرَهُۥٓ أَحَدٌ" />
		<aya index="8" text="أَلَمْ نَجْعَل لَّهُۥ عَيْنَيْنِ" />
		<aya index="9" text="وَلِسَانًۭا وَشَفَتَيْنِ" />
		<aya index="10" text="وَهَدَيْنَٰهُ ٱلنَّجْدَيْنِ" />
		<aya index="11" text="فَلَا ٱقْتَحَمَ ٱلْعَقَبَةَ" />
		<aya index="12" text="وَمَآ أَدْرَىٰكَ مَا ٱلْعَقَبَةُ" />
		<aya index="13" text="فَكُّ رَقَبَةٍ" />
		<aya index="14" text="أَوْ إِطْعَٰمٌۭ فِى يَوْمٍۢ ذِى مَسْغَبَةٍۢ" />
		<aya index="15" text="يَتِيمًۭا ذَا مَقْرَبَةٍ" />
		<aya index="16" text="أَوْ مِسْكِينًۭا ذَا مَتْرَبَةٍۢ" />
		<aya index="17" text="ثُمَّ كَانَ مِنَ ٱلَّذِينَ ءَامَنُوا۟ وَتَوَاصَوْا۟ بِٱلصَّبْرِ وَتَوَاصَوْا۟ بِٱلْمَرْحَمَةِ" />
		<aya index="18" text="أُو۟لَٰٓئِكَ أَصْحَٰبُ ٱلْمَيْمَنَةِ" />
		<aya index="19" text="وَٱلَّذِينَ كَفَرُوا۟ بِـَٔايَٰتِنَا هُمْ أَصْحَٰبُ ٱلْمَشْـَٔمَةِ" />
		<aya index="20" text="عَلَيْهِمْ نَارٌۭ مُّؤْصَدَةٌۢ" />
	</sura>
	<sura index="91" name="الشمس">
		<aya index="1" text="وَٱلشَّمْسِ وَضُحَىٰهَا" bismillah="بِسْمِ ٱللَّهِ ٱلرَّحْمَٰنِ ٱلرَّحِيمِ" />
		<aya index="2" text="وَٱلْقَمَرِ إِذَا تَلَىٰهَا" />
		<aya index="3" text="وَٱلنَّهَارِ إِذَا جَلَّىٰهَا" />
		<aya index="4" text="وَٱلَّيْلِ إِذَا يَغْشَىٰهَا" />
		<aya index="5" text="وَٱلسَّمَآءِ وَمَا بَنَىٰهَا" />
		<aya index="6" text="وَٱلْأَرْضِ وَمَا طَحَىٰهَا" />
		<aya index="7" text="وَنَفْسٍۢ وَمَا سَوَّىٰهَا" />
		<aya index="8" text="فَأَلْهَمَهَا فُجُورَهَا وَتَقْوَىٰهَا" />
		<aya index="9" text="قَدْ أَفْلَحَ مَن زَكَّىٰهَا" />
		<aya index="10" text="وَقَدْ خَابَ مَن دَسَّىٰهَا" />
		<aya index="11" text="كَذَّبَتْ ثَمُودُ بِطَغْوَىٰهَآ" />
		<aya index="12" text="إِذِ ٱنۢبَعَثَ أَشْقَىٰهَا" />
		<aya index="13" text="فَقَالَ لَهُمْ رَسُولُ ٱللَّهِ نَاقَةَ ٱللَّهِ وَسُقْيَٰهَا" />
		<aya index="14" text="فَكَذَّبُوهُ فَعَقَرُوهَا فَدَمْدَمَ عَلَيْهِمْ رَبُّهُم بِذَنۢبِهِمْ فَسَوَّىٰهَا" />
		<aya index="15" text="وَلَا يَخَافُ عُقْبَٰهَا" />
	</sura>
	<sura index="92" name="الليل">
		<aya index="1" text="وَٱلَّيْلِ إِذَا يَغْشَىٰ" bismillah="بِسْمِ ٱللَّهِ ٱلرَّحْمَٰنِ ٱلرَّحِيمِ" />
		<aya index="2" text="وَٱلنَّهَارِ إِذَا تَجَلَّىٰ" />
		<aya index="3" text="وَمَا خَلَقَ ٱلذَّكَرَ وَٱلْأُنثَىٰٓ" />
		<aya index="4" text="إِنَّ سَعْيَكُمْ لَشَتَّىٰ" />
		<aya index="5" text="فَأَمَّا مَنْ أَعْطَىٰ وَٱتَّقَىٰ" />
		<aya index="6" text="وَصَدَّقَ بِٱلْحُسْنَىٰ" />
		<aya index="7" text="فَسَنُيَسِّرُهُۥ لِلْيُسْرَىٰ" />
		<aya index="8" text="وَأَمَّا مَنۢ بَخِلَ وَٱسْتَغْنَىٰ" />
		<aya index="9" text="وَكَذَّبَ بِٱلْحُسْنَىٰ" />
		<aya index="10" text="فَسَنُيَسِّرُهُۥ لِلْعُسْرَىٰ" />
		<aya index="11" text="وَمَا يُغْنِى عَنْهُ مَالُهُۥٓ إِذَا تَرَدَّىٰٓ" />
		<aya index="12" text="إِنَّ عَلَيْنَا لَلْهُدَىٰ" />
		<aya index="13" text="وَإِنَّ لَنَا لَلْءَاخِرَةَ وَٱلْأُولَىٰ" />
		<aya index="14" text="فَأَنذَرْتُكُمْ نَارًۭا تَلَظَّىٰ" />
		<aya index="15" text="لَا يَصْلَىٰهَآ إِلَّا ٱلْأَشْقَى" />
		<aya index="16" text="ٱلَّذِى كَذَّبَ وَتَوَلَّىٰ" />
		<aya index="17" text="وَسَيُجَنَّبُهَا ٱلْأَتْقَى" />
		<aya index="18" text="ٱلَّذِى يُؤْتِى مَالَهُۥ يَتَزَكَّىٰ" />
		<aya index="19" text="وَمَا لِأَحَدٍ عِندَهُۥ مِن نِّعْمَةٍۢ تُجْزَىٰٓ" />
		<aya index="20" text="إِلَّا ٱبْتِغَآءَ وَجْهِ رَبِّهِ ٱلْأَعْلَىٰ" />
		<aya index="21" text="وَلَسَوْفَ يَرْضَىٰ" />
	</sura>
	<sura index="93" name="الضحى">
		<aya index="1" text="وَٱلضُّحَىٰ" bismillah="بِسْمِ ٱللَّهِ ٱلرَّحْمَٰنِ ٱلرَّحِيمِ" />
		<aya index="2" text="وَٱلَّيْلِ إِذَا سَجَىٰ" />
		<aya index="3" text="مَا وَدَّعَكَ رَبُّكَ وَمَا قَلَىٰ" />
		<aya index="4" text="وَلَلْءَاخِرَةُ خَيْرٌۭ لَّكَ مِنَ ٱلْأُولَىٰ" />
		<aya index="5" text="وَلَسَوْفَ يُعْطِيكَ رَبُّكَ فَتَرْضَىٰٓ" />
		<aya index="6" text="أَلَمْ يَجِدْكَ يَتِيمًۭا فَـَٔاوَىٰ" />
		<aya index="7" text="وَوَجَدَكَ ضَآلًّۭا فَهَدَىٰ" />
		<aya index="8" text="وَوَجَدَكَ عَآئِلًۭا فَأَغْنَىٰ" />
		<aya index="9" text="فَأَمَّا ٱلْيَتِيمَ فَلَا تَقْهَرْ" />
		<aya index="10" text="وَأَمَّا ٱلسَّآئِلَ فَلَا تَنْهَرْ" />
		<aya index="11" text="وَأَمَّا بِنِعْمَةِ رَبِّكَ فَحَدِّثْ" />
	</sura>
	<sura index="94" name="الشرح">
		<aya index="1" text="أَلَمْ نَشْرَحْ لَكَ صَدْرَكَ" bismillah="بِسْمِ ٱللَّهِ ٱلرَّحْمَٰنِ ٱلرَّحِيمِ" />
		<aya index="2" text="وَوَضَعْنَا عَنكَ وِزْرَكَ" />
		<aya index="3" text="ٱلَّذِىٓ أَنقَضَ ظَهْرَكَ" />
		<aya index="4" text="وَرَفَعْنَا لَكَ ذِكْرَكَ" />
		<aya index="5" text="فَإِنَّ مَعَ ٱلْعُسْرِ يُسْرًا" />
		<aya index="6" text="إِنَّ مَعَ ٱلْعُسْرِ يُسْرًۭا" />
		<aya index="7" text="فَإِذَا فَرَغْتَ فَٱنصَبْ" />
		<aya index="8" text="وَإِلَىٰ رَبِّكَ فَٱرْغَب" />
	</sura>
	<sura index="95" name="التين">
		<aya index="1" text="وَٱلتِّينِ وَٱلزَّيْتُونِ" bismillah="بِّسْمِ ٱللَّهِ ٱلرَّحْمَٰنِ ٱلرَّحِيمِ" />
		<aya index="2" text="وَطُورِ سِينِينَ" />
		<aya index="3" text="وَهَٰذَا ٱلْبَلَدِ ٱلْأَمِينِ" />
		<aya index="4" text="لَقَدْ خَلَقْنَا ٱلْإِنسَٰنَ فِىٓ أَحْسَنِ تَقْوِيمٍۢ" />
		<aya index="5" text="ثُمَّ رَدَدْنَٰهُ أَسْفَلَ سَٰفِلِينَ" />
		<aya index="6" text="إِلَّا ٱلَّذِينَ ءَامَنُوا۟ وَعَمِلُوا۟ ٱلصَّٰلِحَٰتِ فَلَهُمْ أَجْرٌ غَيْرُ مَمْنُونٍۢ" />
		<aya index="7" text="فَمَا يُكَذِّبُكَ بَعْدُ بِٱلدِّينِ" />
		<aya index="8" text="أَلَيْسَ ٱللَّهُ بِأَحْكَمِ ٱلْحَٰكِمِينَ" />
	</sura>
	<sura index="96" name="العلق">
		<aya index="1" text="ٱقْرَأْ بِٱسْمِ رَبِّكَ ٱلَّذِى خَلَقَ" bismillah="بِسْمِ ٱللَّهِ ٱلرَّحْمَٰنِ ٱلرَّحِيمِ" />
		<aya index="2" text="خَلَقَ ٱلْإِنسَٰنَ مِنْ عَلَقٍ" />
		<aya index="3" text="ٱقْرَأْ وَرَبُّكَ ٱلْأَكْرَمُ" />
		<aya index="4" text="ٱلَّذِى عَلَّمَ بِٱلْقَلَمِ" />
		<aya index="5" text="عَلَّمَ ٱلْإِنسَٰنَ مَا لَمْ يَعْلَمْ" />
		<aya index="6" text="كَلَّآ إِنَّ ٱلْإِنسَٰنَ لَيَطْغَىٰٓ" />
		<aya index="7" text="أَن رَّءَاهُ ٱسْتَغْنَىٰٓ" />
		<aya index="8" text="إِنَّ إِلَىٰ رَبِّكَ ٱلرُّجْعَىٰٓ" />
		<aya index="9" text="أَرَءَيْتَ ٱلَّذِى يَنْهَىٰ" />
		<aya index="10" text="عَبْدًا إِذَا صَلَّىٰٓ" />
		<aya index="11" text="أَرَءَيْتَ إِن كَانَ عَلَى ٱلْهُدَىٰٓ" />
		<aya index="12" text="أَوْ أَمَرَ بِٱلتَّقْوَىٰٓ" />
		<aya index="13" text="أَرَءَيْتَ إِن كَذَّبَ وَتَوَلَّىٰٓ" />
		<aya index="14" text="أَلَمْ يَعْلَم بِأَنَّ ٱللَّهَ يَرَىٰ" />
		<aya index="15" text="كَلَّا لَئِن لَّمْ يَنتَهِ لَنَسْفَعًۢا بِٱلنَّاصِيَةِ" />
		<aya index="16" text="نَاصِيَةٍۢ كَٰذِبَةٍ خَاطِئَةٍۢ" />
		<aya index="17" text="فَلْيَدْعُ نَادِيَهُۥ" />
		<aya index="18" text="سَنَدْعُ ٱلزَّبَانِيَةَ" />
		<aya index="19" text="كَلَّا لَا تُطِعْهُ وَٱسْجُدْ وَٱقْتَرِب ۩" />
	</sura>
	<sura index="97" name="القدر">
		<aya index="1" text="إِنَّآ أَنزَلْنَٰهُ فِى لَيْلَةِ ٱلْقَدْرِ" bismillah="بِّسْمِ ٱللَّهِ ٱلرَّحْمَٰنِ ٱلرَّحِيمِ" />
		<aya index="2" text="وَمَآ أَدْرَىٰكَ مَا لَيْلَةُ ٱلْقَدْرِ" />
		<aya index="3" text="لَيْلَةُ ٱلْقَدْرِ خَيْرٌۭ مِّنْ أَلْفِ شَهْرٍۢ" />
		<aya index="4" text="تَنَزَّلُ ٱلْمَلَٰٓئِكَةُ وَٱلرُّوحُ فِيهَا بِإِذْنِ رَبِّهِم مِّن كُلِّ أَمْرٍۢ" />
		<aya index="5" text="سَلَٰمٌ هِىَ حَتَّىٰ مَطْلَعِ ٱلْفَجْرِ" />
	</sura>
	<sura index="98" name="البينة">
		<aya index="1" text="لَمْ يَكُنِ ٱلَّذِينَ كَفَرُوا۟ مِنْ أَهْلِ ٱلْكِتَٰبِ وَٱلْمُشْرِكِينَ مُنفَكِّينَ حَتَّىٰ تَأْتِيَهُمُ ٱلْبَيِّنَةُ" bismillah="بِسْمِ ٱللَّهِ ٱلرَّحْمَٰنِ ٱلرَّحِيمِ" />
		<aya index="2" text="رَسُولٌۭ مِّنَ ٱللَّهِ يَتْلُوا۟ صُحُفًۭا مُّطَهَّرَةًۭ" />
		<aya index="3" text="فِيهَا كُتُبٌۭ قَيِّمَةٌۭ" />
		<aya index="4" text="وَمَا تَفَرَّقَ ٱلَّذِينَ أُوتُوا۟ ٱلْكِتَٰبَ إِلَّا مِنۢ بَعْدِ مَا جَآءَتْهُمُ ٱلْبَيِّنَةُ" />
		<aya index="5" text="وَمَآ أُمِرُوٓا۟ إِلَّا لِيَعْبُدُوا۟ ٱللَّهَ مُخْلِصِينَ لَهُ ٱلدِّينَ حُنَفَآءَ وَيُقِيمُوا۟ ٱلصَّلَوٰةَ وَيُؤْتُوا۟ ٱلزَّكَوٰةَ ۚ وَذَٰلِكَ دِينُ ٱلْقَيِّمَةِ" />
		<aya index="6" text="إِنَّ ٱلَّذِينَ كَفَرُوا۟ مِنْ أَهْلِ ٱلْكِتَٰبِ وَٱلْمُشْرِكِينَ فِى نَارِ جَهَنَّمَ خَٰلِدِينَ فِيهَآ ۚ أُو۟لَٰٓئِكَ هُمْ شَرُّ ٱلْبَرِيَّةِ" />
		<aya index="7" text="إِنَّ ٱلَّذِينَ ءَامَنُوا۟ وَعَمِلُوا۟ ٱلصَّٰلِحَٰتِ أُو۟لَٰٓئِكَ هُمْ خَيْرُ ٱلْبَرِيَّةِ" />
		<aya index="8" text="جَزَآؤُهُمْ عِندَ رَبِّهِمْ جَنَّٰتُ عَدْنٍۢ تَجْرِى مِن تَحْتِهَا ٱلْأَنْهَٰرُ خَٰلِدِينَ فِيهَآ أَبَدًۭا ۖ رَّضِىَ ٱللَّهُ عَنْهُمْ وَرَضُوا۟ عَنْهُ ۚ ذَٰلِكَ لِمَنْ خَشِىَ رَبَّهُۥ" />
	</sura>
	<sura index="99" name="الزلزلة">
		<aya index="1" text="إِذَا زُلْزِلَتِ ٱلْأَرْضُ زِلْزَالَهَا" bismillah="بِسْمِ ٱللَّهِ ٱلرَّحْمَٰنِ ٱلرَّحِيمِ" />
		<aya index="2" text="وَأَخْرَجَتِ ٱلْأَرْضُ أَثْقَالَهَا" />
		<aya index="3" text="وَقَالَ ٱلْإِنسَٰنُ مَا لَهَا" />
		<aya index="4" text="يَوْمَئِذٍۢ تُحَدِّثُ أَخْبَارَهَا" />
		<aya index="5" text="بِأَنَّ رَبَّكَ أَوْحَىٰ لَهَا" />
		<aya index="6" text="يَوْمَئِذٍۢ يَصْدُرُ ٱلنَّاسُ أَشْتَاتًۭا لِّيُرَوْا۟ أَعْمَٰلَهُمْ" />
		<aya index="7" text="فَمَن يَعْمَلْ مِثْقَالَ ذَرَّةٍ خَيْرًۭا يَرَهُۥ" />
		<aya index="8" text="وَمَن يَعْمَلْ مِثْقَالَ ذَرَّةٍۢ شَرًّۭا يَرَهُۥ" />
	</sura>
	<sura index="100" name="العاديات">
		<aya index="1" text="وَٱلْعَٰدِيَٰتِ ضَبْحًۭا" bismillah="بِسْمِ ٱللَّهِ ٱلرَّحْمَٰنِ ٱلرَّحِيمِ" />
		<aya index="2" text="فَٱلْمُورِيَٰتِ قَدْحًۭا" />
		<aya index="3" text="فَٱلْمُغِيرَٰتِ صُبْحًۭا" />
		<aya index="4" text="فَأَثَرْنَ بِهِۦ نَقْعًۭا" />
		<aya index="5" text="فَوَسَطْنَ بِهِۦ جَمْعًا" />
		<aya index="6" text="إِنَّ ٱلْإِنسَٰنَ لِرَبِّهِۦ لَكَنُودٌۭ" />
		<aya index="7" text="وَإِنَّهُۥ عَلَىٰ ذَٰلِكَ لَشَهِيدٌۭ" />
		<aya index="8" text="وَإِنَّهُۥ لِحُبِّ ٱلْخَيْرِ لَشَدِيدٌ" />
		<aya index="9" text="۞ أَفَلَا يَعْلَمُ إِذَا بُعْثِرَ مَا فِى ٱلْقُبُورِ" />
		<aya index="10" text="وَحُصِّلَ مَا فِى ٱلصُّدُورِ" />
		<aya index="11" text="إِنَّ رَبَّهُم بِهِمْ يَوْمَئِذٍۢ لَّخَبِيرٌۢ" />
	</sura>
	<sura index="101" name="القارعة">
		<aya index="1" text="ٱلْقَارِعَةُ" bismillah="بِسْمِ ٱللَّهِ ٱلرَّحْمَٰنِ ٱلرَّحِيمِ" />
		<aya index="2" text="مَا ٱلْقَارِعَةُ" />
		<aya index="3" text="وَمَآ أَدْرَىٰكَ مَا ٱلْقَارِعَةُ" />
		<aya index="4" text="يَوْمَ يَكُونُ ٱلنَّاسُ كَٱلْفَرَاشِ ٱلْمَبْثُوثِ" />
		<aya index="5" text="وَتَكُونُ ٱلْجِبَالُ كَٱلْعِهْنِ ٱلْمَنفُوشِ" />
		<aya index="6" text="فَأَمَّا مَن ثَقُلَتْ مَوَٰزِينُهُۥ" />
		<aya index="7" text="فَهُوَ فِى عِيشَةٍۢ رَّاضِيَةٍۢ" />
		<aya index="8" text="وَأَمَّا مَنْ خَفَّتْ مَوَٰزِينُهُۥ" />
		<aya index="9" text="فَأُمُّهُۥ هَاوِيَةٌۭ" />
		<aya index="10" text="وَمَآ أَدْرَىٰكَ مَا هِيَهْ" />
		<aya index="11" text="نَارٌ حَامِيَةٌۢ" />
	</sura>
	<sura index="102" name="التكاثر">
		<aya index="1" text="أَلْهَىٰكُمُ ٱلتَّكَاثُرُ" bismillah="بِسْمِ ٱللَّهِ ٱلرَّحْمَٰنِ ٱلرَّحِيمِ" />
		<aya index="2" text="حَتَّىٰ زُرْتُمُ ٱلْمَقَابِرَ" />
		<aya index="3" text="كَلَّا سَوْفَ تَعْلَمُونَ" />
		<aya index="4" text="ثُمَّ كَلَّا سَوْفَ تَعْلَمُونَ" />
		<aya index="5" text="كَلَّا لَوْ تَعْلَمُونَ عِلْمَ ٱلْيَقِينِ" />
		<aya index="6" text="لَتَرَوُنَّ ٱلْجَحِيمَ" />
		<aya index="7" text="ثُمَّ لَتَرَوُنَّهَا عَيْنَ ٱلْيَقِينِ" />
		<aya index="8" text="ثُمَّ لَتُسْـَٔلُنَّ يَوْمَئِذٍ عَنِ ٱلنَّعِيمِ" />
	</sura>
	<sura index="103" name="العصر">
		<aya index="1" text="وَٱلْعَصْرِ" bismillah="بِسْمِ ٱللَّهِ ٱلرَّحْمَٰنِ ٱلرَّحِيمِ" />
		<aya index="2" text="إِنَّ ٱلْإِنسَٰنَ لَفِى خُسْرٍ" />
		<aya index="3" text="إِلَّا ٱلَّذِينَ ءَامَنُوا۟ وَعَمِلُوا۟ ٱلصَّٰلِحَٰتِ وَتَوَاصَوْا۟ بِٱلْحَقِّ وَتَوَاصَوْا۟ بِٱلصَّبْرِ" />
	</sura>
	<sura index="104" name="الهمزة">
		<aya index="1" text="وَيْلٌۭ لِّكُلِّ هُمَزَةٍۢ لُّمَزَةٍ" bismillah="بِسْمِ ٱللَّهِ ٱلرَّحْمَٰنِ ٱلرَّحِيمِ" />
		<aya index="2" text="ٱلَّذِى جَمَعَ مَالًۭا وَعَدَّدَهُۥ" />
		<aya index="3" text="يَحْسَبُ أَنَّ مَالَهُۥٓ أَخْلَدَهُۥ" />
		<aya index="4" text="كَلَّا ۖ لَيُنۢبَذَنَّ فِى ٱلْحُطَمَةِ" />
		<aya index="5" text="وَمَآ أَدْرَىٰكَ مَا ٱلْحُطَمَةُ" />
		<aya index="6" text="نَارُ ٱللَّهِ ٱلْمُوقَدَةُ" />
		<aya index="7" text="ٱلَّتِى تَطَّلِعُ عَلَى ٱلْأَفْـِٔدَةِ" />
