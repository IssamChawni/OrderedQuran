<?xml version="1.0" encoding="UTF-8"?><sura><sura index="17" name="الماعون">
    <aya bismillah="بِسمِ اللَّهِ الرَّحمٰنِ الرَّحيمِ" index="1" text="أَرَأَيْتَ الَّذِي يُكَذِّبُ بِالدِّينِ"/>
    <aya index="2" text="فَذَٰلِكَ الَّذِي يَدُعُّ الْيَتِيمَ"/>
    <aya index="3" text="وَلَا يَحُضُّ عَلَىٰ طَعَامِ الْمِسْكِينِ"/>
    <aya index="4" text="فَوَيْلٌ لِلْمُصَلِّينَ"/>
    <aya index="5" text="الَّذِينَ هُمْ عَنْ صَلَاتِهِمْ سَاهُونَ"/>
    <aya index="6" text="الَّذِينَ هُمْ يُرَاءُونَ"/>
    <aya index="7" text="وَيَمْنَعُونَ الْمَاعُونَ"/>
  </sura></sura>